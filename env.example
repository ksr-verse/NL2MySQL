# NL2MySQL Environment Configuration Example
# Copy this file to .env and modify the values as needed

# Database Configuration
DB_CONNECTION_STRING=mysql+pymysql://root@localhost:3306/database
DB_MAX_POOL_SIZE=10
DB_TIMEOUT=30

# LLM Configuration
LLM_PROVIDER=local  # Options: 'local' or 'openai'

# Local LLM Settings (for Ollama)
LLM_LOCAL_MODEL=phi  # Options: phi, mistral, llama2, codellama, etc.
LLM_LOCAL_URL=http://localhost:11434

# OpenAI Settings (if using OpenAI)
LLM_OPENAI_API_KEY=your_openai_api_key_here
LLM_OPENAI_MODEL=gpt-3.5-turbo  # Options: gpt-3.5-turbo, gpt-4, etc.

# Generation Parameters
LLM_TEMPERATURE=0.1  # Lower values for more deterministic output
LLM_MAX_TOKENS=1000

# Vector Database Configuration
VECTOR_PERSIST_DIRECTORY=./chromadb
VECTOR_COLLECTION_NAME=schema_embeddings
VECTOR_EMBEDDING_MODEL=all-MiniLM-L6-v2  # Sentence transformer model
VECTOR_TOP_K=5  # Number of relevant schema chunks to retrieve

# Application Configuration
APP_DEBUG=false
APP_LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR
APP_HOST=0.0.0.0
APP_PORT=8000

# Schema Files
APP_SCHEMA_FILE=schema.json
APP_MANUAL_SCHEMA_FILE=schema_manual.json

# Example connection strings for different scenarios:

# MySQL with username and password:
# DB_CONNECTION_STRING=mysql+pymysql://username:password@localhost:3306/database

# MySQL with root user (no password):
# DB_CONNECTION_STRING=mysql+pymysql://root@localhost:3306/database

# MySQL with custom port:
# DB_CONNECTION_STRING=mysql+pymysql://username:password@localhost:3307/database

# Remote MySQL server:
# DB_CONNECTION_STRING=mysql+pymysql://username:password@remote-server:3306/database

# MySQL with SSL:
# DB_CONNECTION_STRING=mysql+pymysql://username:password@localhost:3306/database?ssl_disabled=false
